{
  "arrowParens": "always",
  "bracketSpacing": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "@/lib/(.*)$",
    "@/components/(.*)$",
    "@/app/(.*)$",
    "./(.*)$"
  ],
  "printWidth": 80,
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true
}
